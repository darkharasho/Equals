{
  "name": "equals",
  "version": "1.0.10",
  "description": "A minimalist's calculator. just type rows, have tabs, etc",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "prebuild": "node scripts/clean-dist.js",
    "build": "node app/scripts/build-installer.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/darkharasho/Equals.git"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "marked": "^16.2.1",
    "mathjs": "^14.6.0"
  },
  "devDependencies": {
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.equals.app",
    "productName": "Equals",
    "artifactName": "Equals-${version}-setup.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "app/icons/equals_v2.png"
    },
    "mac": {
      "icon": "app/icons/equals_v2.png"
    },
    "linux": {
      "icon": "app/icons/equals_v2.png",
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "installerSidebar": "./app/icons/equals_banner_v2.bmp",
      "uninstallerSidebar": "./app/icons/equals_banner_v2.bmp",
      "perMachine": true,
      "deleteAppDataOnUninstall": true
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
