{
  "name": "equals",
  "version": "1.0.0",
  "description": "A minimalist's calculator. just type rows, have tabs, etc",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo 'No tests specified'",
    "prebuild": "node scripts/clean-dist.js",
    "build": "node app/scripts/build-installer.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "mathjs": "^14.6.0"
  },
  "devDependencies": {
    "adm-zip": "^0.5.16",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.equals.app",
    "productName": "Equals",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "app/icons/equals.png"
    },
    "mac": {
      "icon": "app/icons/equals.png"
    },
    "linux": {
      "icon": "app/icons/equals.png",
      "target": [
        "AppImage"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    }
  }
}
